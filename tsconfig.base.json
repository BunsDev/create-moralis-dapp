{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "CommonJS",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@create-moralis-dapp/toolkit": ["packages/toolkit/src/index.ts"],
      "create-moralis-dapp": ["packages/create-moralis-dapp/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
